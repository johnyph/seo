<div class="panel panel-default login-form space-20">
  <div class="panel-heading">
    <h3 class="panel-title">Listing Reports</h3>
  </div>
  <div class="panel-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Report</th>
          <th>Date Created<th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @reports.each do |report| %>
          <tr>
            <td><%= report.name %></td>
            <td><%= report.created_at %></td>
            <td><%= link_to 'Show', report, class: 'btn btn-primary btn-xs' %></td>  
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= will_paginate @reports, renderer: BootstrapPagination::Rails %>